{{#if messages.succes}}
 <div class="alert alert-success" role="alert">
  {{messages.succes}}<span aria-hidden="true" class="float-right" id="closeBtn"><i class="fa fa-times" aria-hidden="true"></i></span>
</div>
{{/if}}


<ul class="list-group" id="ticketsList">
  {{#each tickets}}
    <li class="list-group-item">
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <div class="card-title">
            <h5>{{title}}</h5>
            <small class="float-right">{{createdBy}}</small>
          </div>
          <p class="card-text">{{description}}</p>
          <a href="http://localhost:9000/tickets/edit/{{_id}}" class="btn btn-primary">Details</a>
        </div>
      </div>
    </li>
  {{/each}}
</ul>