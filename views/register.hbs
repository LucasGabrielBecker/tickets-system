{{#if messages.info}}
 <div class="alert alert-success" role="alert">
  {{messages.info}}<span aria-hidden="true" class="float-right closeBtnFlash"><i class="fa fa-times" aria-hidden="true"></i></span>
</div>
{{/if}}


{{#if error}}
  <div class="alert alert-danger" role="alert" id="errorFlash">
    {{error}}<span aria-hidden="true" class="float-right closeBtnFlash" ><i class="fa fa-times" aria-hidden="true"></i></span>
  </div>
{{/if}}
<form action="/register" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Your coolest nickname</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="nickname">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail2" aria-describedby="emailHelp" name="userEmail">
    <p id="emailHelp" class="form-text text-muted text-small">We'll never share your email with anyone else.</p>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="userPassword1">
    <label for="exampleInputPassword1">Confirm Password</label>
    <input type="password" class="form-control" id="exampleInputPassword2" name="userPassword2">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script>
  document.querySelector(".closeBtnFlash").addEventListener('click', ()=>{
    $('#errorFlash').delay(0).hide(0); 
  })
</script>