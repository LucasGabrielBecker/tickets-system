{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{error}}<span aria-hidden="true" class="float-right closeBtnFlash"><i class="fa fa-times" aria-hidden="true"></i></span>
  </div>
{{/if}}

  {{#if succes}}
    <div class="alert alert-success" role="alert">
     {{succes}}<span aria-hidden="true" class="float-right closeBtnFlash"><i class="fa fa-times" aria-hidden="true"></i></span>
    </div>
  {{/if}}


    <form action="/auth/login" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="userEmail" autocomplete="off">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="userPassword">
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
  <span class="float-right"><a href="/register">Dont you have an account yet?</a></span>
</form>
    </div>