<div class="container newTicket">
    <form action="/tickets/saveTicket" method="post" class="needs-validation shadow-lg p-3 mb-5 bg-white rounded" novalidate>
    <div class="form-group row">
        <label for="validationCustomUsername" class="col-sm-2 col-form-label">Ticket Title</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="inputTitle" placeholder="Title" name="title" required>
            <div class="invalid-feedback">
                Please provide a title.
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
        <input type="textarea" rows="3" class="form-control" id="inputDescription" placeholder="Ticket description" name="description" required>
            <div class="invalid-feedback">
                Please provide a description.
            </div>
        </div>
    </div>

    <div class="input-group mb-3">
    <select class="custom-select" id="inputGroupSelect02" name="createdBy" required>
        <option selected disabled>Created By</option>
        {{#each users}}
            <option value="{{email}}">{{email}}</option>
        {{/each}}
        <div class="invalid-feedback">
                Please provide a description.
        </div>
    </select>
    <div class="input-group-append">
        <label class="input-group-text" for="inputGroupSelect02">Owner</label>
    </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-10">
        <button type="submit" id="btnSaveTicket" class="btn btn-primary">Save Ticket</button>
        </div>
    </div>
    </form>
</div>

<script>
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>